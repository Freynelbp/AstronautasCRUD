@model AstronautaModel
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear Astronauta
    </div>
    <div class="card-body">

        <form enctype="multipart/form-data" asp-action="Crear" asp-controller="Astronauta" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nacionalidad</label>
                <input asp-for="Nacionalidad" type="text" class="form-control" placeholder="Nacionalidad">
                <span asp-validation-for="Nacionalidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="text" class="form-control" placeholder="Descripcion">
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" type="date" class="form-control">
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Fallecimiento (En caso contrario, dejar vacio)</label>
                <input asp-for="FechaFallecimiento" type="date" class="form-control">
                <span asp-validation-for="FechaFallecimiento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Redes Sociales (Opcional)</label>
                <input asp-for="RedesSociales" type="text" class="form-control" placeholder="Redes Sociales">
                <span asp-validation-for="RedesSociales" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Detalles Misiones </label>
                <input asp-for="DetallesMisiones" type="text" class="form-control" placeholder="Detalles de la Mision">
                <span asp-validation-for="DetallesMisiones" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Adjuntar Imagen (.jpg)</label>
                <input asp-for="File" type="file" class="form-control" accept="image/jpeg">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <a class="btn btn-danger" asp-action="Listar">Cancelar</a> |
            <button type="submit" class="btn btn-primary">Crear Astronauta</button>
        </form>
    </div>
</div>
